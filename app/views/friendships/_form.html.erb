


<table class="table"> 
  <% User.all_except(current_user).each do |user| %>
      <tr>
          <td><%= user.user_name %></td>
          <td><%= user.email%></td>
          <td>


             <% a = Friendship.where(user_id: current_user.id, friend_id: user.id) %>
              <% if  a.blank? %>
              <%= link_to 'Add Friend', friendships_path( user_id: current_user.id, friend_id: user.id), method: :post %>
              <% else %>
              <%= link_to 'Cancel request', friendship_path(a), method: :delete %>
              <%#= link_to 'Cancel request', '/friendships/:id', method: :delete %>
               <% end %>
          </td>
      </tr>
  <% end %>
</table>

