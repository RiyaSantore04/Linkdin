<% like = post.likes.find{|like| like.user_id == current_user.id} %>
            
    <% if like %>
        <%= button_to 'unLike', like_path(like), method: :delete, remote: true %>
    <% else %>

        <%= button_to 'Like', likes_path( user_id: current_user.id , likeable_id: post.id,likeable_type: Post), method: :post, remote: true %>
    <%end%>
      
      <p><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></p> 

